{
  "name": "styxy",
  "version": "0.1.0",
  "description": "A development port coordination daemon for multi-instance environments",
  "main": "src/index.js",
  "bin": {
    "styxy": "./bin/styxy",
    "styx": "./bin/styxy"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "jest --selectProjects e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "daemon:start": "node src/daemon.js --daemon",
    "daemon:stop": "node bin/styxy daemon stop",
    "daemon:status": "node bin/styxy daemon status"
  },
  "keywords": [
    "port-management",
    "development",
    "coordination",
    "daemon",
    "multi-instance",
    "claude-code"
  ],
  "author": "cordlesssteve",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "express": "^4.18.0",
    "proper-lockfile": "^4.1.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-spawn": "^7.0.6",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "supertest": "^7.1.4",
    "tmp": "^0.2.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cordlesssteve/styxy.git"
  },
  "bugs": {
    "url": "https://github.com/cordlesssteve/styxy/issues"
  },
  "homepage": "https://github.com/cordlesssteve/styxy#readme"
}
